{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": ".homeybuild/",
    "typeRoots": ["./node_modules/@types", "types"],
    "baseUrl": "./", // Ensure the base URL is set to the root of your project
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files, speeds up compilation
    "forceConsistentCasingInFileNames": true, // Ensures file names are consistently cased
    "allowImportingTsExtensions": true,
    "noEmit": true 
  },
  "include": ["src/**/*.ts", "drivers/**/*.ts"], // Adjust according to your project structure
  "exclude": ["node_modules", ".homeybuild"]
}