{
  "extends": "athom",
  "rules": {
    "indent": "off",
    "padded-blocks": "off",
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": ["modules"]
      }
    ],
    "node/no-missing-import": [
      "error",
      {
        "allowModules": ["homey"]
      }
    ],
    "operator-linebreak": ["error", "after"]
  },
  "env": {
    "es6": true,
    "node": true // Specifierar att koden körs i Node.js-miljö
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module" // Tillåter användning av import/export
  }
}
